{
    "name": "Container",
    "settings-location": "Container (Local)",
    "docs-url": "#",
    "source-code-url": "https://github.com/campaignmonitor/shell/blob/master/src/_container.scss",
    "tests": [{
        "selector": ".l-container",
        "test": [{
            "description": "A percentage width until its <code class='🐌-b-code'>max-width</code> or <code class='🐌-b-code'>min-width</code> is reached, center aligned by default",
            "run": "<div class=l-container></div>"
        }]
        },{
        "selector": ".l-container--small",
        "test": [{
            "description": "A narrower version",
            "run": "<div class='l-container l-container--small'></div>"
        }]
        },{
        "selector": ".l-container--x-small",
        "test": [{
            "description": "The narrowest version",
            "run": "<div class='l-container l-container--x-small'></div>"
        }]
        },{
        "selector": ".l-container--large",
        "test": [{
            "description": "A wider version",
            "run": "<div class='l-container l-container--large'></div>"
        }]
        },{
        "selector": ".l-container--x-large",
        "test": [{
            "description": "The widest version",
            "run": "<div class='l-container l-container--x-large'></div>"
        }]
        },{
        "selector": ".l-container--full-width",
        "test": [{
            "description": "Full width",
            "run": "<div class='l-container l-container--full-width'></div>"
        }]
        },{
        "selector": ".l-container--flex",
        "test": [{
            "description": "Flex container (<code class='🐌-b-code'>display: flex;</code>)",
            "run": "<div class='l-container l-container--flex'></div>"
        }]
    }]
 }
